# Database
MONGODB_URI=mongodb://localhost:27017/ledgerswap

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# KuCoin API Configuration
KUCOIN_API_KEY=your-kucoin-api-key-here
KUCOIN_API_SECRET=your-kucoin-api-secret-here
KUCOIN_API_PASSPHRASE=your-kucoin-api-passphrase-here

# Server Configuration
PORT=8080
NODE_ENV=development

# DEX Aggregator Settings
SLIPPAGE_TOLERANCE=1
MAX_GAS_PRICE=50000000000
TRANSACTION_TIMEOUT=300000

# Rubic SDK Configuration
RUBIC_CROSS_CHAIN_FEE_ADDRESS=0x0000000000000000000000000000000000000000
RUBIC_ON_CHAIN_FEE_ADDRESS=0x0000000000000000000000000000000000000000
INFURA_ETHEREUM_RPC=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# SMTP Email Configuration
SMTP_USER=your-smtp-username-here
SMTP_PASS=your-smtp-password-here
FROM_EMAIL=noreply@ledgerswap.io
ADMIN_EMAIL=admin@ledgerswap.io

# ü§ñ Automated Swap Configuration
ENABLE_AUTOMATED_SWAPS=true

# Private Key Encryption Secret (REQUIRED for automated swaps)
PRIVATE_KEY_ENCRYPTION_SECRET=your-super-secret-encryption-key-here-make-it-long-and-random

# üîê Private Keys for Automated Swaps (Rubic Integration)
# WARNING: Keep these keys secure! Never commit to version control!

# Bitcoin Private Key (WIF format or hex)
BTC_PRIVATE_KEY=your-bitcoin-private-key-here

# Ethereum Private Key (for ERC20 tokens)
ETH_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# XRP Private Key (hex format)
XRP_PRIVATE_KEY=your-xrp-private-key-here

# Stellar Private Key (Secret Key format)
XLM_PRIVATE_KEY=your-stellar-secret-key-here

# XDC Network Private Key (hex format)
XDC_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# IOTA Private Key (seed format)
MIOTA_PRIVATE_KEY=your-iota-seed-here

# üåê RPC Endpoints for Blockchain Integration
INFURA_ETHEREUM_RPC=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
INFURA_BSC_RPC=https://bsc-dataseed.binance.org/
INFURA_POLYGON_RPC=https://polygon-rpc.com/
INFURA_ARBITRUM_RPC=https://arb1.arbitrum.io/rpc

# üí∞ Wallet Addresses (Auto-derived from private keys)
# These are automatically calculated - no need to set manually
BTC_WALLET_ADDRESS=auto-derived-from-private-key
ETH_WALLET_ADDRESS=auto-derived-from-private-key
XRP_WALLET_ADDRESS=auto-derived-from-private-key
XLM_WALLET_ADDRESS=auto-derived-from-private-key
XDC_WALLET_ADDRESS=auto-derived-from-private-key
MIOTA_WALLET_ADDRESS=auto-derived-from-private-key
